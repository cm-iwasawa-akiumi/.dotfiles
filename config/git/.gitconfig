[color]
# colorの設定(以下のコマンドは自動で色つける)
status = auto
diff = auto
branch = auto
interactive = auto
grep = auto
[alias]
cm = commit -m
st = status --short --branch
ntl = log --graph --decorate --oneline --name-status
tl = log --graph --date=short --pretty=format:'%C(yellow)%h %C(green)%cd %C(cyan)%d %Creset%s %Cblue[%cn]'
alog = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset'
po = push origin
ft = fetch
pl = pull
co = checkout
br = branch
vdiff = git difftool --tool=vimdiff
